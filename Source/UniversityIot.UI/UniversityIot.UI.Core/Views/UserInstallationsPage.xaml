<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityIot.UI.Core.Views.UserInstallationsPage">

  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackLayout Grid.Row="0">
      <Label Text="Installations" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Start"/>
    </StackLayout>

    <ListView Grid.Row="1" ItemsSource="{Binding Installations}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Description}"
                    Detail="{Binding SerialNumber}"
                    Command="{Binding ShowInstallationDetails}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </Grid>

</ContentPage>