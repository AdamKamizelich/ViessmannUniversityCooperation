<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityIot.UI.Core.Views.DatapointEditorPage">
  <StackLayout>
    <Label Text="Description" HorizontalTextAlignment="Start" />
    <Label Text="{Binding DatapointModel.Description}" HorizontalTextAlignment="Start" />
    <Label Text="Hex address" HorizontalTextAlignment="Start" />
    <Label Text="{Binding DatapointModel.HexAddress}" HorizontalTextAlignment="Start" />
    <Label Text="Value" HorizontalTextAlignment="Start" />
    <Label Text="{Binding DatapointModel.DatapointValue}" HorizontalTextAlignment="Start" />
    <Button Text="Save"/>
  </StackLayout>
</ContentPage>